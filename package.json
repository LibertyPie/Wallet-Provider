{
  "name": "web3providers",
  "version": "1.0.0",
  "description": "A unified api for web3 wallet  connections",
  "main": "index.js",
  "scripts": {
    "dev-compile-style": "npx node-sass --include-path scss ./src/assets/styles/main.scss  ./src/assets/styles/main.css --watch --output-style compressed",
    "build-dev": "compile-style; npx tsc-bundle tsconfig.json --watch --debug",
    "dev": "npx concurrently \"npm:dev-compile-style\" \"npm:build-dev\"",
    "compile-style": "npx node-sass --include-path scss ./src/assets/styles/main.scss  ./src/assets/styles/main.css --output-style compressed",
    "build": "compile-style && npx tsc-bundle tsconfig.json"
  },
  "keywords": [
    "web3",
    "ethereum",
    "binance",
    "smart",
    "chain",
    "trustwallet"
  ],
  "author": "libertypie",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^5.3.0",
    "node-sass": "^5.0.0",
    "typescript": "^4.1.3",
    "typescript-bundle": "^1.0.17"
  },
  "dependencies": {
    "micromodal": "^0.4.6"
  }
}
