{
  "name": "@libertypie/wallet-provider",
  "main": "./dist/src/index.js",
  "version": "1.0.1",
  "description": "A unified api for web3 wallet  connections",
  "scripts": {
    "copy-assets": "npx copy-and-watch src/**/*.{css,json,svg,png,scss} dist/src",
    "copy-assets-dev": "npx copy-and-watch --watch src/**/*.{css,json,svg,png} dist/src",
    "dev-compile-style": "npx node-sass --include-path scss ./src/assets/styles/main.scss  ./src/assets/styles/main.css --watch --output-style compressed",
    "build-dev": "npx tsc --watch --project tsconfig.json",
    "dev": "npx concurrently \"npm:copy-assets-dev\" \"npm:dev-compile-style\" \"npm:build-dev\"",
    "compile-style": "npx node-sass --include-path scss ./src/assets/styles/main.scss  ./src/assets/styles/main.css --output-style compressed",
    "build": "npm run compile-style && npx tsc --project tsconfig.json && npm run copy-assets"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "Wallet provider",
    "Web3",
    "ethersjs",
    "ethereum",
    "binance",
    "smart",
    "chain",
    "Trust Wallet",
    "metamask",
    "binance chain",
    "coinbase wallet",
    "sync wallet",
    "Dapp",
    "Wallet"
  ],
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/libertypie/wallet-Provider.git"
  },
  "homepage": "https://wallet-provider.libertypie.com",
  "author": {
    "name": "LibertyPie",
    "email": "hello@libertypie.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^14.14.16",
    "concurrently": "^5.3.0",
    "copy-and-watch": "^0.1.5",
    "node-sass": "^5.0.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "micromodal": "^0.4.6"
  }
}
